@using Microsoft.AspNetCore.Identity;
@model LostGamer.Models.Comments
@inject Microsoft.AspNetCore.Identity.UserManager<IdentityUser> userManager
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" typeof="textarea" rows="5">Enter Comment</textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfilesId" class="control-label"></label>
                <input asp-for="UserProfilesId" class="form-control" value="@ViewBag.UserProfileId" />
            </div>
            <div class="form-group">
                <label asp-for="GuideId" class="control-label"></label>
                <input asp-for="GuideId" class="form-control" value="@ViewBag.GuideId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewComments">Back to Comments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
