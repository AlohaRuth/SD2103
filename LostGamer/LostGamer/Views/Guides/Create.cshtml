@using Microsoft.AspNetCore.Identity;
@model LostGamer.Models.Guides
@inject Microsoft.AspNetCore.Identity.UserManager<IdentityUser> userManager
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Guides</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GuideTitle" class="control-label"></label>
                <input asp-for="GuideTitle" class="form-control" />
                <span asp-validation-for="GuideTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfilesId" class="invisible"></label>
                <input asp-for="UserProfilesId" class="invisible" value="@ViewBag.UserProfileId" />
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GuideContent" class="control-label"></label>
                <textarea asp-for="GuideContent" class="form-control" typeof="textarea" rows="5"></textarea>
                <span asp-validation-for="GuideContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
